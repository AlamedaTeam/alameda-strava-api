{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@vercel/next" },
    { "src": "pages/api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "crons": [
    {
      "path": "/api/cron-refresh",
      "schedule": "0 3 * * *"
    }
  ]
}
